{
  "name": "coin",
  "private": true,
  "packageManager": "pnpm@7.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:client": "pnpm dev --filter client",
    "dev:apis": "pnpm dev --filter apis",
    "test:hardhat": "pnpm test --filter hardhat-app",
    "dev:hardhat": "pnpm dev --filter hardhat-app"
  },
  "devDependencies": {
    "@turbo/gen": "^1.9.7",
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "tailwind-config": "workspace:*",
    "prettier": "^2.5.1",
    "turbo": "latest"
  }
}
